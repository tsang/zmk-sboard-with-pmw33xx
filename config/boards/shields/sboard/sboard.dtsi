#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <8>;

        map = <
RC(0,0) RC(0,1) RC(0,6) RC(0,3) RC(0,4)                         RC(4,4) RC(4,3) RC(4,2) RC(4,1) RC(4,0)
RC(1,0) RC(1,1) RC(1,6) RC(1,3) RC(1,4)                         RC(5,4) RC(5,3) RC(5,2) RC(5,1) RC(5,0)
RC(2,0) RC(2,1) RC(2,6) RC(2,3) RC(2,4)                         RC(6,4) RC(6,3) RC(6,2) RC(6,1) RC(6,0)
RC(3,0) RC(3,1) RC(3,6)   RC(3,3) RC(3,4) RC(3,5)         RC(7,5) RC(7,4)                       RC(7,0)       
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 19  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
        
        col-gpios
            = <&pro_micro 4  GPIO_ACTIVE_HIGH>
            , <&pro_micro 5  GPIO_ACTIVE_HIGH>
            , <&pro_micro 6  GPIO_ACTIVE_HIGH>  // Left needs 2, right needs 6.  Cut pin 2 so can remap and have same for both
            , <&pro_micro 7  GPIO_ACTIVE_HIGH>
            , <&pro_micro 8  GPIO_ACTIVE_HIGH>
            , <&pro_micro 9  GPIO_ACTIVE_HIGH>
            , <&pro_micro 2  GPIO_ACTIVE_HIGH>
            ;
    };

    trackballs {
        compatible = "zmk,keymap-trackballs";
        trackballs = <&trackball>;
    };
};

&nice_nano_spi {
    compatible = "nordic,nrf-spim";
    status = "disabled";
    miso-pin = <17>; // P0.17
    mosi-pin = <10>; // P0.10
    sck-pin = <22>; // P0.22
    label = "Pixart PMW3360";

    trackball: trackball@0 {
        status = "disabled";
        compatible = "pixart,pmw33xx";
        reg = <0>;
        //irq-gpios = <&gpio1 01 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>; // P0.09
        label = "Pixart PMW3360";
        spi-max-frequency = <2000000>;
    };
};